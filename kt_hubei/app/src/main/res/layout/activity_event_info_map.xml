<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|top"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lin_progression"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:background="@drawable/bg_rectangle10_white"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/map_btn_progression"
                android:layout_height="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="进展"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_report"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:background="@drawable/bg_rectangle10_white"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/map_btn_report"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="上报"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_video"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:background="@drawable/bg_rectangle10_white"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/map_btn_video"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="视频"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_zhiling"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:background="@drawable/bg_rectangle10_white"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/map_btn_zhiling"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="指令"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
