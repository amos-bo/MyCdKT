<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_notice_warning_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="11.23"
        android:textColor="@color/assist_2"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_notice_warning_time"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_popup_refuse_bg">

        <TextView
            android:id="@+id/item_notice_warning_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/assist_6"
            android:text="11111111"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/item_notice_warning_publisher"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:layout_below="@id/item_notice_warning_content"
            android:text="-指挥中心"
            android:textColor="@color/assist_2"
            android:textSize="16sp"
            android:visibility="invisible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_notice_warning_type"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_below="@id/item_notice_warning_time"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/other_2"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="雷雨橙色预警"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>