<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/assist_5"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/assist_8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <TextView
            android:id="@+id/login_yonghuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="用户名"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/login_username"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/login_yonghuming"
            android:background="@drawable/shape_login"
            android:hint="请输入用户名"
            android:textColor="@color/black"
            android:textColorHint="@color/assist_3"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/login_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_empty" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/assist_8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <TextView
            android:id="@+id/login_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="密    码"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/login_mima"
            android:background="@drawable/shape_login"
            android:hint="请输入登陆密码"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/assist_3"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/assist_8" />

    <TextView
        android:layout_width="wrap_content"
        android:text="设置"
        android:id="@+id/tv_ipsetting"
        android:padding="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/warning_2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/login_sub"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/selector_login_sub"
        android:text="登陆"
        android:textColor="@color/white" />

</LinearLayout>